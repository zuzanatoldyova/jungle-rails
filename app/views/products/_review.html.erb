<div class="row">
  <dl class="dl-horizontal col-sm-4">
    <dt>Username</dt>
    <dd><%= User.find(review.user_id).first_name %></dd>
    <dt>Description</dt>
    <% if review.description %>
      <dd><%= review.description %></dd>
    <% else %>
      <dd></dd>
    <% end %>
    <dt>Rating</dt>
    <dd><%= review.rating %></dd>
  </dl>
  <div class="col-xx-offset-4">
    <% if logged_in? && review.user_id == current_user.id %>
      <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>